<div class="container">
  <div class="row">
    <h2 class="px-3 mt-5"><strong>商品一覧(全<%= @items.count %>件)</strong></h2>
  </div>
  <div class="row">
    <% @items.last(8).each do |item| %>
      <div class="col-3 mt-5 ">
        <div class="items">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, format: 'jpeg', size:'100x100' %>
            <div class="items-body">
              <h5><%= item.name %></h5>
              <p><%= item.add_tax_price.to_s(:delimited) %>円</p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="text-right">
      <%= paginate @items %>
    </div>
</div>