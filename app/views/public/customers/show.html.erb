<h3>マイページ</h3>

<p class="showbox">
    <strong>登録情報</strong>
    <%= link_to '編集する', customers_my_page_edit_path, class: 'btn btn-success' %>
</p>

<table class="table">
    <tbody>
        <tr>
            <th>氏名</th>
            <td><%= @customer.full_name %></td>
        </tr>
        <tr>
            <th>カナ</th>
            <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
        </tr>
        <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
        </tr>
    </tbody>
</table>

<p class="showbox">
    <strong>配送先</strong>
    <%= link_to '一覧を見る', addresses_path, class: "btn btn-primary" %>
</p>
<p class="showbox">
    <strong>注文履歴</strong>
    <%= link_to '一覧を見る', orders_path, class: "btn btn-primary" %>
</p>