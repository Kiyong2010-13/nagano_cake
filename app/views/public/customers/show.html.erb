<h3>マイページ</h3>

<p>登録情報</p><%= link_to '編集する', customers_edit_path, class: 'btn btn-success' %>
<table class="table">
    <tbody>
        <tr>
            <th>氏名</th>
            <td><%= @customer.full_name %></td>
        </tr>
        <tr>
            <th>カナ</th>
            <td><%= @customer.full_name_kana %></td>
        </tr>
        <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
            <th>住所</th>
            <td><%= @customer.address %></td>
        </tr>
        <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email %></td>
        </tr>
    </tbody>
</table>

<p>配送先</p><%= link_to '一覧を見る',  class: 'btn btn-primary' %>
<p>注文履歴</p><%= link_to '一覧を見る',  class: 'btn btn-primary' %>