<h3>配送先変更</h3>
<%= form_with model:@address, url:address_path(@address.id),  method: :patch, local:true do |f| %>
  <div class="field">
    <%= f.label :郵便番号 %><span>(ハイフンなし)</span>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", size: 60 %>
  </div>
  <div class="field">
    <%= f.label :宛先 %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <%= f.submit '変更内容を保存', class: 'btn btn-success' %>
<% end %>