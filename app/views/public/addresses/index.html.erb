<h3>配送先登録/一覧</h3>
<%= form_with model:@address,url:addresses_path, local:true do |f| %>
  <div class="field">
    <%= f.label :郵便番号 %><span>(ハイフンなし)</span>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", size: 60 %>
  </div>
  <div class="field">
    <%= f.label :宛先 %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
  </div>
  <%= f.submit '新規登録', class: 'btn btn-success' %>
<% end %>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛先</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.postal_code %></td>
        <td><%= address.address %></td>
        <td><%= address.name %></td>
        <td>
          <%= link_to "編集する", edit_address_path(address.id), class: 'btn btn-success' %>
          <%= link_to "削除する", address_path(address.id), class: "btn btn-danger", method: :delete %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>