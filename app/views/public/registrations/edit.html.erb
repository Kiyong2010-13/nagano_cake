<h2>会員情報編集</h2>

<%= form_with model: resource, url: customer_path,  method: :patch, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :名前 %>
    (姓)<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>(名)<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name"  %>
  </div>
  <div class="field">
    <%= f.label :フリガナ %>
    (セイ)<%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>(メイ)<%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana"  %>
  </div>
  <div class="field">
    <%= f.label :郵便番号 %><span>(ハイフンなし)</span>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
  </div>
  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address", size: 60 %>
  </div>
  <div class="field">
    <%= f.label :電話番号 %><span>(ハイフンなし)</span>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "更新する", class: 'btn btn-success' %>
  </div>
<% end %>


<%= link_to "削除する", customers_unsubscribe_path, class: "btn btn-danger"   %>

