<h3>商品一覧</h3>
<%= link_to new_admin_item_path, class: "btn btn-light float-right", method: :get do %>
  <i class="fas fa-plus"></i>
<% end %>
<table class="table">
  <thead>
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.id %></td>
        <td><%= link_to item.name, admin_item_path(item.id) %></td>
        <td><%= item.price.to_s(:delimited) %></td>
        <td><%= item.genre.name %></td>
        <td>
          <% if item.is_active == true %>
            <span>販売中</span>
          <% else %>
            <span>販売停止中</span>
          <% end %>
        </td>
      </tr>
    <% end %>
    <%= paginate @items %>
  </tbody>
</table>