<h3>商品新規登録</h3>
<%= form_with model:@item, url:admin_items_path, local:true do |f| %>
  <div class="form-group">
    <label>商品画像</label>
    <%= f.attachment_field :image %>
  </div>
  <div class="form-group">
    <label>商品名</label>
    <%= f.text_field :name, class: "form-control", placeholder: "商品名" %>
  </div>
 <div class="form-group">
   <label>商品説明</label>
   <%= f.text_area :introduction, class: "form-control", placeholder: "ここに説明文を記述します" %>
 </div>
 <div class="form-group">
   <label>ジャンル</label>
   <%= f.collection_select(:genre_id, @genres, :id, :name ) %>
 </div>
 <div class="form-group">
   <label>税抜価格</label>
   <%= f.text_field :price, class: "form-control", placeholder: 1000 %><span>円</span>
 </div>
 <div class="form-group">
   <label>販売ステータス</label>
   <%= f.radio_button :is_active, "販売中", checked: true %>販売中 <%= f.radio_button :is_active, "販売停止中" %>販売停止中
 </div>
 <div class="form-group">
   <p><%= f.submit "新規登録", class: 'btn btn-success' %></p>
 </div>
<% end %>
