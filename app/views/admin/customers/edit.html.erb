<h3><%= @customer.full_name %>さんの会員情報編集</h3>
<% form_with model @customer, url:admin_customer_path(@customer.id), method: :patch, local:true do |f| %>
  <div class: "form-group">
    <label>会員ID</label>
    <%= @customer.id %>
  </div>
  <div class: "form-group">
    <label>氏名</label>
    <%= f.text_field :last_name, class: "form-control" %>
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
  <div class: "form-group">
    <label>フリガナ</label>
    <%= f.text_field :last_name_kana, class: "form-control" %>
    <%= f.text_field :first_name_kana, class: "form-control" %>
  </div>
  <div class: "form-group">
    <label>郵便番号</label>
    <%= f.text_field :postal_code, class: "form-control" %>
  </div>
  <div class: "form-group">
    <label>住所</label>
    <%= f.text_area :address, class: "form-control" %>
  </div>
  <div class: "form-group">
    <label>電話番号</label>
    <%= f.text_field :telephone_number, class: "form-control" %>
  </div>
  <div class: "form-group">
    <label>メールアドレス</label>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <div class: "form-group">
    <label>会員ステータス</label>
    <%= f.radio_button :is_deleted, "販売中", checked: true %>有効 <%= f.radio_button :is_deleted, "販売停止中" %>退会
  </div>
  <div class="form-group">
   <p><%= f.submit "変更を保存", class: 'btn btn-success' %></p>
 </div>
<% end %>