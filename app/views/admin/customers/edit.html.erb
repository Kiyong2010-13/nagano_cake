<h3><%= @customer.full_name %>さんの会員情報編集</h3>
<%= form_with model:@customer, url:admin_customer_path(@customer.id), method: :patch, local:true do |f| %>
  <div class: "form-group">
    <label>会員ID</label>
    <%= @customer.id %>
  </div>
  <div class="form-group">
    <label>氏名</label>
    <%= f.text_field :last_name  %>
    <%= f.text_field :first_name %>
  </div>
  <div class="form-group">
    <label>フリガナ</label>
    <%= f.text_field :last_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>
  <div class="form-group">
    <label>郵便番号</label>
    <%= f.text_field :postal_code %>
  </div>
  <div class="form-group">
    <label>住所</label>
    <%= f.text_field :address, :size => "80*80" %>
  </div>
  <div class="form-group">
    <label>電話番号</label>
    <%= f.text_field :telephone_number %>
  </div>
  <div class="form-group">
    <label>メールアドレス</label>
    <%= f.text_field :email %>
  </div>
  <div class="form-group">
    <label>会員ステータス</label>
    <%= f.radio_button :is_deleted, "有効", checked: false %>有効 <%= f.radio_button :is_deleted, "退会" %>退会
  </div>
  <div class="form-group">
   <p><%= f.submit "変更を保存", class: 'btn btn-success' %></p>
 </div>
<% end %>